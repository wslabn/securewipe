{
  "name": "securewipe",
  "version": "1.0.1",
  "build": "production-ready",
  "description": "Secure disk wiping and formatting tool for bootable Linux USB",
  "main": "main.js",
  "scripts": {
    "start": "chmod -R 755 node_modules/electron/dist && chown -R root:root node_modules/electron/dist && electron . --no-sandbox --disable-gpu --disable-dev-shm-usage",
    "dev": "chmod -R 755 node_modules/electron/dist && electron . --dev --no-sandbox",
    "build": "electron-builder",
    "build-linux": "electron-builder --linux",
    "build-win": "electron-builder --win",
    "test": "jest"
  },
  "keywords": ["disk", "wipe", "secure", "format", "linux", "bootable"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "node-disk-info": "^1.3.0"
  },
  "build": {
    "appId": "com.securewipe.app",
    "productName": "SecureWipe",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "src/**/*",
      "assets/**/*"
    ],
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    },
    "win": {
      "target": "nsis"
    }
  }
}